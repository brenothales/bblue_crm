.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "List", deals_path
      %li= link_to "New Deal", new_deal_path
      %li.active= link_to "Edit", edit_deal_path
  .content
    %h2.title= "Edit Deal"
    .inner
      - form_for @deal, :url => deal_path(@deal), :html => { :class => :form } do |f|
        .group
          = f.label :title, "Title", :class => :label
          = f.text_field :title, :class => 'text_field'
          %span.description Ex: a simple text

        .group
          = f.label :description, "Description", :class => :label
          = f.text_area :description, :rows => 3, :class => 'text_area'
          %span.description Ex: a simple text
          
        .group
          = f.label :deal_with, "Deal With", :class => :label
          = f.text_field :deal_with, :class => 'text_field'
          %span.description Ex: a simple text

        .group
          = f.label :amount, "Amount", :class => :label
          = f.text_field :amount, :class => 'text_field money'

        .group
          = f.label :due_date, "Status", :class => :label
          = f.select :status, status_for_select
        .group.navform.wat-cf
          %button.button{:type => 'submit'}
            =image_tag("web-app-theme/tick.png", :alt => "Save")
            ="Save"
          = link_to "#{image_tag("web-app-theme/cross.png", :alt => "Cancel")}" "Cancel", deals_path, :class => "button"
