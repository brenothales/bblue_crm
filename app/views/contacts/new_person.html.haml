.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", contacts_path
      %li.active= link_to "New Person", new_person_contacts_path
      %li= link_to "New Company", new_company_contacts_path
  .content
    %h2.title= "#{t("web-app-theme.new", :default => "New")} Person"
    .inner
      - form_for :contact, :url => create_person_contacts_path, :html => { :class => :form } do |f|
        = render :partial => "form_person", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
