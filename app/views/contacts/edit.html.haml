.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", contacts_path
      %li= link_to "New Person", url_for(:action => :new, :type => 'person')
      %li= link_to "New Company", url_for(:action => :new, :type => 'company')
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_contact_path
  .content
    %h2.title= "#{t("web-app-theme.edit", :default => "Edit")} #{@contact.type.titleize}"
    .inner
      - form_for @contact, :url => contact_path(@contact), :html => { :class => :form } do |f|
        - if @contact.type == 'person'
          = render :partial => "form_person", :locals => {:f => f}
        - else
          = render :partial => "form_company", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')       	
