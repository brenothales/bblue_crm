.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "List", tasks_path
      %li= link_to "New Task", new_task_path
  .content
    %h2.title= "All Tasks"
    .inner
      - unless @tasks.blank?
        %table.table
          %tr
            %th.first ID
            %th Title
            %th Due Date
            %th.last &nbsp;
          - @tasks.each do |task|
            %tr{:class => cycle("odd","even")}
              %td= task.id
              %td= link_to task.title, task_path(task)
              %td= task.due_date.to_time.strftime("%a, %d %b %Y %H:%M:%S")
              %td.last
                = link_to "Show", task_path(task)
                = link_to "Edit", edit_task_path(task)
                = link_to "Delete", task_path(task), :method => :delete, :confirm => "Are you sure?"
        .actions-bar.wat-cf
          .actions
      - else
        There are no tasks available.
