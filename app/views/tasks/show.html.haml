.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "List", tasks_path
      %li= link_to "New Task", new_task_path
      %li.active= link_to "Show", task_path
  .content
    .inner
      - unless @task.nil?
        - @attributes.each do |attr|
          - unless @task.send(attr).blank?
            %p
              %strong= attr.to_s.titleize
              - if attr=='due_date'
                =@task.send(attr).to_time.strftime("%a, %d %b %Y %H:%M:%S")
              - else
                =@task.send(attr)
        .wat-cf
          = link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_task_path(@task), :class => "button"
          = link_to "#{image_tag("web-app-theme/cross.png", :alt => "Delete")} Delete", task_path(@task), :method => "delete", :class => "button", :confirm => "Are you sure?"
      - else
        %h1 This task doesn't exist!
