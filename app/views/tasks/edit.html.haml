.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "List", tasks_path
      %li= link_to "New Task", new_task_path
      %li.active= link_to "Edit", edit_task_path
  .content
    %h2.title= "Edit Task"
    .inner
      - form_for @task, :url => task_path(@task), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}